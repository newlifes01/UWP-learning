<Page
    x:Class="MyApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Canvas Margin="20">
        
        <Line X1="35" Y1="17" X2="170" Y2="95" Stroke="Yellow"/>
        
        <Line X1="160" Y1="49" X2="12" Y2="212" Stroke="Gray" StrokeThickness="13"/>
        
        <Line X1="50" Y1="87" X2="235" Y2="245" StrokeThickness="20">
            <Line.Stroke>
                <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                    <GradientStop Color="Orange" Offset="0"/>
                    <GradientStop Color="LightYellow" Offset="0.5"/>
                    <GradientStop Color="SteelBlue" Offset="1"/>
                </LinearGradientBrush>
            </Line.Stroke>
        </Line>
        
        <Line X1="0" Y1="300" X2="350" Y2="300" Stroke="Snow" StrokeThickness="8" StrokeDashArray="6,2,4"/>
        
    </Canvas>
</Page>
