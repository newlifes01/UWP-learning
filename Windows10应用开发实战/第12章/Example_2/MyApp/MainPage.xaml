<Page
    x:Class="MyApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel>
        <TextBox Name="txtInput" Header="请输入内容：" TextWrapping="Wrap"/>
        <Button Content="写入文件" Click="OnWrite" Margin="3,12,0,15"/>
        <Button Content="读取文件" Click="OnRead" Margin="3,15,0,12"/>
        <TextBox Name="txtOutput" IsReadOnly="True" Header="读出的内容：" TextWrapping="Wrap"/>
    </StackPanel>
</Page>
