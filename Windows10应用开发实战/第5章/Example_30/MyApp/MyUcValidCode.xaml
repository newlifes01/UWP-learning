<UserControl
    x:Class="MyApp.MyUcValidCode"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignWidth="400"
    d:DesignHeight="55">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <TextBox VerticalAlignment="Center" x:Name="txtInputCode"/>
        <SymbolIcon x:Name="symbTip" Grid.Column="1" Foreground="Green" Symbol="Accept" VerticalAlignment="Center" Visibility="Collapsed"/>
        <Border VerticalAlignment="Center" Grid.Column="2" Background="DarkBlue" Padding="3">
            <TextBlock x:Name="tbCode" FontSize="24" Text="2254" Tapped="OnTBTapped" Foreground="White"/>
        </Border>
    </Grid>
</UserControl>
