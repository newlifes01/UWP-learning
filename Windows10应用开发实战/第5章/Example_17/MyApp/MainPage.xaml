<Page
    x:Class="MyApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel>
        <DatePicker x:Name="datepicker" Margin="10,15" Header="请选择日期："/>
        <TimePicker x:Name="timepicker" Margin="10,15" Header="请选择时间："/>
        <Button Content="确定" Margin="0,25" HorizontalAlignment="Center" Click="OnClick"/>
        <TextBlock x:Name="tbResult" FontSize="24" Foreground="SkyBlue" Margin="0,3" TextWrapping="Wrap"/>
    </StackPanel>
</Page>
